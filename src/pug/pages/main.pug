extends ../layout/main

block variables
	- var title = 'Главная';
	- 
		var pagelist = [
			{href: 'main.html',name:'Главная'},
			{href: 'tipografika.html',name:'Типографика'},
		];

block content
	section.about-service
		.container
			.row
				.col-12
					.about-service__top
						.about-service__img
							img(src="/assets/img/woman-lifting.jpg", alt="")

						.about-service__info
							.about-service__title Безоперационное лазерное омоложение
								| 
								span.about-service__title-accent Fotona 4D

							.about-service__text глубокий лифтинг без наркоза, разрезов и боли

		.container
			.row
				.col-10.offset-1
					.about-service__content
						.about-service__desc
							ul.list-design
								li Моментальный видимый эффект уже после первой процедуры
								li Минимальный период реабилитации
								li Без сезонных ограничений, в любое время года
								li Комфортная процедура без анестезии


						a(href="#").btn.btn_green.btn_big Записаться
							br
							|на консультацию

	section.desc-service
		.container
			.row
				.col-8.offset-1
					.desc-service__title Многоуровневое дермальное омоложение <b>Fotona 4D</b> — инновационная методика для впечатляющих результатов
					.desc-service__text Лазерное омоложение Fotona 4D (Fotona Technology) – это запатентованный безболезненный метод фототермической реконструкции кожи, признанный во всем мире одним из самых комфортных, безопасных и эффективных методов омоложения. Это уникальная для России технология, которая показывает гарантированный результат и при этом не требует подготовки и восстановительного периода. В рамках одной процедуры выполняется комплекс из 4-х запатентованных anti-aging технологий, восстанавливающих поверхностные, средние и глубокие структуры кожи. Реконструкция тканей лица проводится одновременно с внутренней и внешней стороны, поэтому женщинам дается уникальная возможность получить эффект лифтинга и помолодеть быстро, всего за 1 сеанс.

		.desc-service__bg.d-md-none
			img(src="/assets/img/bg-girl.png", alt="")

		.desc-service-adv
			.container
				.row
					.col-10.offset-1
						.desc-service-adv__content
							-
								var list=[
									{img:'face1.svg', text:'Накопительный эффект за счет запуска выработки собственного коллагена'},
									{img:'face2.svg', text:'Решение широкого спектра проблем за 1 сеанс'},
									{img:'face3.svg', text:'Результат сравним с хирургической подтяжкой лица'},
									{img:'face4.svg', text:'Отсутствие осложнений и побочных эффектов'},
								]

							each item in list
								.desc-service-adv__item
									.desc-service-adv__icon
										img(src="/assets/img/"+item.img, alt="")
									.desc-service-adv__text= item.text